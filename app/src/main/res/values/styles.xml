<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="imageStyle_light">
        <item name="tint">@color/black</item>
    </style>
    <style name="imageStyle_dark">
        <item name="tint">@color/red</item>
    </style>

    <style name="textStyle_light">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="textStyle_dark">
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="my_toolbar_light" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@color/white</item>
        <item name="titleTextColor">@color/black</item>
        <item name="navigationIcon">@drawable/action_back_dark</item>
    </style>
    <style name="my_toolbar_dark" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black</item>
        <item name="titleTextColor">@color/white</item>
        <item name="navigationIcon">@drawable/action_back_light</item>
    </style>

</resources>

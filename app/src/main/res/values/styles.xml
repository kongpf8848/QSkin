<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="bottomBarStyle_light">
        <item name="android:tint">@color/selector_bottombar_style_light</item>
        <item name="android:textColor">@color/selector_bottombar_style_light</item>
    </style>
    <style name="bottomBarStyle_dark">
        <item name="android:tint">@color/selector_bottombar_style_dark</item>
        <item name="android:textColor">@color/selector_bottombar_style_dark</item>
    </style>

    <style name="textStyle_light">
        <item name="android:drawableStart">@drawable/chat_bottom_avastar_0</item>
    </style>
    <style name="textStyle_dark">
        <item name="android:drawableStart">@drawable/chat_bottom_settings_0</item>
    </style>


    <style name="my_toolbar_light" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@color/white</item>
        <item name="titleTextColor">@color/black</item>
        <item name="navigationIcon">@drawable/action_back_dark</item>
    </style>
    <style name="my_toolbar_dark" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black</item>
        <item name="titleTextColor">@color/white</item>
        <item name="navigationIcon">@drawable/action_back_light</item>
    </style>

</resources>
